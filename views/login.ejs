<%- include('partials/header') %>
<style>
.dropdown{
  position: relative;
  display: inline-block;
}
.dropdown::before{
  position: absolute;
  content: "\25bc";
  top:15px;
  right: 10px;
  height: 20px;
  width: 20px;
  color: #333;
}
.span-logo {
 margin-left: 50px;
 display: inline-block;
 vertical-align: top;
 height: 75px;
 width: 175px;
 margin-top:0px;

}
</style>
<div class="form-container">
<div class="login">
    <h1>Login</h1>
    <form method="post">
      <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
      <div class="form-group">
    	   <input type="text" name="username" id="username" value="<%= locals.username || '' %>" class="form-control" placeholder="Enter your email" />
      </div>
      <div class="form-group">
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block btn-large">Let me in.</button>
      </div>
      <!--<div class="form-group">
          <a href="/register" class="btn btn-primary">Register</a>
      </div>-->
       <p class="change_link" style="color:azure">
									Not a member yet ?
									<a href="/register" class="to_register" style="color:aqua">Join us</a>
			 </p>
    </form>
    <br>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- login bootsnipp -->
</div>
</div>
<%- include('partials/footer') %>
